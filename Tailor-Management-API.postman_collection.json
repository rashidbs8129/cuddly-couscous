        {
          "name": "Get Tailor Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tailors/stats/{{tailor_id}}",
              "host": ["{{base_url}}"],
              "path": ["tailors", "stats", "{{tailor_id}}"]
            }
          }
        },
        {
          "name": "Delete Tailor Profile",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tailors/profile/{{tailor_id}}",
              "host": ["{{base_url}}"],
              "path": ["tailors", "profile", "{{tailor_id}}"]
            }
          }
        }
      ]
    },
