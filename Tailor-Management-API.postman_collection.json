              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe Updated\",\n  \"shopName\": \"John's Premium Tailoring\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tailors/profile/{{tailor_id}}",
              "host": ["{{base_url}}"],
              "path": ["tailors", "profile", "{{tailor_id}}"]
            }
          }
        },
        {
          "name": "Get All Tailors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
