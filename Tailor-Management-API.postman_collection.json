              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tailors/profile/{{tailor_id}}",
              "host": ["{{base_url}}"],
              "path": ["tailors", "profile", "{{tailor_id}}"]
